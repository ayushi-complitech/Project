<%= form_with model: @blog, class:"form-validate-jquery", local: true do |form| %>

<div>
<%= form.label :blog_name, class:"me-4" %>
<%= form.text_field :blog_name, required: true, placeholder: "Enter blog name", class:"mb-2" %>
<% @blog.errors.full_messages_for(:blog_name).each do |message| %>
      <div><%= message %></div>
<% end %>
</div>

<div>
<%= form.label :description, class:"me-4" %>
<%= form.text_field :description, placeholder: "Enter description", class:"mb-2" %>
<% @blog.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
<% end %>
</div>

 <div class="field">
   <%= form.label :content, class:"mb-2" %>
   <%= form.rich_text_area :content %>
</div>

<div>
<%= form.label :image, class:"mb-2 me-2" %>
<%= form.file_field :image, class:"mt-2" %>
</div>

<div>
  <%= form.submit"Create blog", class:"btn btn-primary mt-2 mb-2" %>
</div>
<% end %>