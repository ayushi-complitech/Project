  <%= link_to 'New role', new_role_path, class: "btn btn-danger", style: 'color:white' %>
<table>
 <thead>
  <tr>
    <th>Role name</th>
  </tr>
 </thead>

 <tbody>
  <% @roles.each do |role| %>
   <tr>
   	 <td><%= role.role_name %></td>
     <td><%= link_to 'Show', role_path(role), class:"btn btn-dark pe-3" %> </td>        
     <td><%= link_to 'Edit', edit_role_path(role), class:"btn btn-dark pe-4" %> </td>               
     <td><%= button_to 'Destroy', role_path(role), class:"btn btn-dark",
          data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" },
          method: :delete %>                 
      </td>
   </tr>
  <% end %>
 </tbody>
</table>